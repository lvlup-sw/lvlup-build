dotnet_diagnostic.IDE1006.severity = none     # Naming rule violation
dotnet_diagnostic.IDE0290.severity = none     # Use primary constructor
dotnet_diagnostic.CA1860.severity = silent    # Avoid using Enumerable.Any() extension method
dotnet_diagnostic.CA2254.severity = silent    # Template should be static expression

