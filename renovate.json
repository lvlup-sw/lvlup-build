{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "on saturday",
    "on sunday"
  ],
  "timezone": "America/Denver",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "weekly"
  },
  "packageRules": [
    {
      "updateTypes": ["patch"],
      "automerge": true
    }
  ]
}
